{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash.*\\bgit\\s+(checkout\\s+-b|worktree\\s+add).*feat/",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/validate-branch-creation.sh"
          }
        ]
      },
      {
        "matcher": "Bash.*\\bgit\\s+commit\\b",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/validate-commit-readiness.sh"
          }
        ]
      },
      {
        "matcher": "Bash.*\\bgh\\s+pr\\s+create\\b",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/validate-pr-readiness.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit.*internal/contracts|MultiEdit.*internal/contracts",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/check-contract-changes.sh"
          }
        ]
      }
    ]
  }
}