# Drink Master 环境配置示例
# 复制此文件为 .env 并修改相应配置

# 服务器配置
GIN_MODE=debug
PORT=8080
HOST=localhost

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=drink_master
DB_PASSWORD=your_password
DB_NAME=drink_master_dev

# 测试数据库
DB_NAME_TEST=drink_master_test

# JWT配置
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_HOURS=24

# 开发模式配置
MOCK_MODE=false
LOG_LEVEL=debug

# 可选：外部服务配置
# REDIS_URL=redis://localhost:6379
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587